# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Lighting Factory Outlet Online"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/lighting_factory"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl"

# Payment Gateway (Stripe or Omise)
# Stripe
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Omise (Thai payment gateway)
OMISE_SECRET_KEY="skey_test_..."
NEXT_PUBLIC_OMISE_PUBLIC_KEY="pkey_test_..."

# Email Service (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="Lighting Factory <noreply@lightingfactory.th>"

# File Upload (AWS S3 or Cloudinary)
# AWS S3
AWS_S3_BUCKET="lighting-factory-uploads"
AWS_REGION="ap-southeast-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
NEXT_PUBLIC_S3_URL="https://your-bucket.s3.amazonaws.com"

# Cloudinary
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Real-time Updates (Pusher or Ably)
# Pusher
PUSHER_APP_ID="your-app-id"
PUSHER_KEY="your-key"
PUSHER_SECRET="your-secret"
PUSHER_CLUSTER="ap1"
NEXT_PUBLIC_PUSHER_KEY="your-key"
NEXT_PUBLIC_PUSHER_CLUSTER="ap1"

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_FB_PIXEL_ID="XXXXXXXXXXXXXXXX"

# Feature Flags
NEXT_PUBLIC_ENABLE_POOLS="true"
NEXT_PUBLIC_ENABLE_PRO_PROGRAM="true"
NEXT_PUBLIC_ENABLE_CUSTOM_PROJECTS="true"

# API Keys (Third-party services)
GOOGLE_MAPS_API_KEY="your-google-maps-key"
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-key"

# Shipping
SHIPPING_API_KEY="your-shipping-provider-key"
SHIPPING_API_SECRET="your-shipping-provider-secret"

# SMS Notifications (optional)
SMS_API_KEY="your-sms-provider-key"
SMS_SENDER_NAME="LightingFactory"

# Admin
ADMIN_EMAIL="admin@lightingfactory.th"
ADMIN_ALERT_EMAIL="alerts@lightingfactory.th"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Session
SESSION_SECRET="your-session-secret"
SESSION_MAX_AGE="2592000"

# Cors
CORS_ORIGIN="http://localhost:3000,https://lightingfactory.th"

# Production
NODE_ENV="development"
